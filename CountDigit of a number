import java.util.*;
  
  public class Main{
      public static void countDigit(int n)
      {
          int d=0;
          while(n>0)
          {
              n=n/10;
              d++;
          }
          System.out.println(d);
      }
  public static void main(String[] args) {
    // write your code here  
    Scanner scn=new Scanner(System.in);
int n=scn.nextInt();
countDigit(n);
   }
  }
